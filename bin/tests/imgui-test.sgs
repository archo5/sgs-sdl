
include "sgsimgui";

function configure()
{
}

function initialize()
{
	global Window = SS_CreateWindow( "SGS-SDL Game Framework", SDL_WINDOWPOS_UNDEFINED, SDL_WINDOWPOS_UNDEFINED, 1024, 576, SDL_WINDOW_OPENGLMAYBE );
	Window.initRenderer( SS_RENDERER_DONTCARE, SS_RENDERER_VSYNC );
	
	ImGui_SS_Init( Window.width, Window.height );
}

global lasttime = ftime();
function update()
{
	curtime = ftime();
	dt = curtime - lasttime;
	global lasttime = curtime;
	
	SS_Clear( color(0.1,0.2,0.4) );
	
	ImGui_SS_NewFrame( dt );
	
	ImGui_ShowUserGuide();
	
	ImGui_Render();
	
	SS_Present();
}

function on_event( e )
{
	if( e.type == SDL_QUIT )
		global sys_exit = true;
	ImGui_SS_Event( e );
}

function cleanup()
{
}
